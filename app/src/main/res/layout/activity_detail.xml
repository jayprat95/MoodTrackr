<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jprathip.ssui2016.finalproject.DetailActivity">


    <View
        android:id="@+id/activity_transition_header"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:transitionName="holder1"
        android:background="@color/colorPrimary"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_button"
        android:src="@mipmap/ic_image_edit"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:transitionName="fab"
        android:layout_marginTop="-26dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/activity_transition_header"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        />


    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="Title"
        android:layout_alignBottom="@+id/activity_transition_header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />


    <FrameLayout
        android:id="@+id/FragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_transition_header"/>


</RelativeLayout>
